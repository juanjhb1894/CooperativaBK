<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@android:color/transparent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:orientation="vertical"
        android:background="@drawable/layout_forgotten"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imgCloseStep2"
            android:src="@drawable/ic_baseline_close_24"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:layout_alignParentEnd="true"
            android:layout_width="32dp"
            android:layout_height="32dp"/>

        <TextView
            android:id="@+id/forgotten2Title"
            android:layout_margin="20dp"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="@string/forgotten2Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/forgottenBody"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/forgotten2Title"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:text="@string/forgotten2Body"
            android:textSize="14sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_below="@id/forgottenBody"
            android:id="@+id/lyPIN"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/et_vfcode_digit1"
                android:background="@drawable/rounded_edittext"
                android:layout_margin="5dp"
                android:textAlignment="center"
                android:inputType="number"
                android:maxLength="1"
                android:layout_width="50dp"
                android:layout_height="40dp"/>

            <EditText
                android:id="@+id/et_vfcode_digit2"
                android:background="@drawable/rounded_edittext"
                android:layout_margin="5dp"
                android:textAlignment="center"
                android:inputType="number"
                android:maxLength="1"
                android:layout_width="50dp"
                android:layout_height="40dp"/>

            <EditText
                android:id="@+id/et_vfcode_digit3"
                android:background="@drawable/rounded_edittext"
                android:layout_margin="5dp"
                android:textAlignment="center"
                android:inputType="number"
                android:maxLength="1"
                android:layout_width="50dp"
                android:layout_height="40dp"/>

            <EditText
                android:id="@+id/et_vfcode_digit4"
                android:background="@drawable/rounded_edittext"
                android:layout_margin="5dp"
                android:maxLength="1"
                android:textAlignment="center"
                android:inputType="number"
                android:layout_width="50dp"
                android:layout_height="40dp"/>

        </LinearLayout>

        <Button
            android:id="@+id/btnValidatePIN"
            android:background="@drawable/rounded_buttom_inverse"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/lyPIN"
            android:textStyle="bold"
            android:text="@string/validar"
            android:textColor="@color/white"
            android:layout_width="200dp"
            android:layout_height="40dp"/>

    </RelativeLayout>

</RelativeLayout>